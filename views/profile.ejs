    <title>Profile</title>
  </head>
  <body>
    <div>
      <a href="http://localhost:3000/logout" class="logout-btn">
        <span class="button_lg">
          <span class="button_sl"></span>
          <span class="button_text">< Logout</span>
        </span>
      </a>
    </div>
    <div>
      <a href="http://localhost:3000/uploadPic"
        ><img src="/images/uploads/<%= user.profilePic %>" alt=""
      /></a>
    </div>
    <h1>Hello <%= user.username %> üñê</h1>
    <p>Write a new post</p>
    <form id="myForm" action="/post" method="post">
      <div class="">
        <textarea
          id="heading"
          name="heading"
          placeholder="Write Title"
          style="
            height: 30px;
            width: 400px;
            padding: 10px;
            border: 2px solid grey;
          "
        ></textarea>
      </div>
      <div class="col-75">
        <textarea
          id="content"
          name="content"
          placeholder="Write something.."
          style="
            height: 100px;
            width: 400px;
            padding: 10px;
            border: 2px solid grey;
          "
        ></textarea>
      </div>
      <button>Create new Post</button>
    </form>
    <br />
    <br />
    <br />
    <hr />
    <br /><br /><br />

    <h2>Posts</h2>
    <div class="cards">
      <% posts.reverse().forEach((post) => { %>
      <div class="card">
        <a class="card1" href="http://localhost:3000/update/<%= post._id %>">
          <p><%= post.heading %></p>
          <p class="small"><%= post.content %></p>
          <div class="go-corner" href="#">
            <div class="go-arrow">‚Üí</div>
          </div>
        </a>
        <a href="http://localhost:3000/like/<%= post._id %>" class="Btn">
          <%= post.likes.indexOf(user._id) > -1 ? "Unlike" : "Like" %>

          <span class="likeCount"><%= post.likes.length %></span>
        </a>

        <a
          href="http://localhost:3000/deletePost/<%= post._id %>"
          class="noselect"
        >
          <span class="text">Delete</span
          ><span class="icon"
            ><svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
